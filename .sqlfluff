[sqlfluff]
dialect = tsql
templater = jinja
exclude_rules = L003,L014,L029
max_line_length = 120

[sqlfluff:rules]
tab_space_size = 4
indent_unit = space

[sqlfluff:rules:layout.long_lines]
max_line_length = 120

[sqlfluff:rules:capitalisation.identifiers]
extended_capitalisation_policy = consistent

[sqlfluff:rules:references.quoting]
forbidden_quotes = none

[sqlfluff:rules:AM04]
allow_select_star = true