@model List<Client.Models.WeatherForecast>

<h2>Weather Forecast History</h2>

<form method="post" asp-action="Generate">
    <button type="submit" class="btn btn-primary">Generate Forecasts</button>
</form>

<table class="table mt-4">
    <thead>
        <tr>
            <th>Date</th>
            <th>Temp (°C)</th>
            <th>Summary</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var forecast in Model)
        {
            <tr>
                <td>@forecast.Date</td>
                <td>@forecast.TemperatureC</td>
                <td>@forecast.Summary</td>
            </tr>
        }
    </tbody>
</table>
